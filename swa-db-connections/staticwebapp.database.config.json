{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.3.19/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true
    },
    "graphql": {
      "enabled": false
    },
    "host": {
      "mode": "production",
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "GuitarBrand": {
      "source": "dbo.guitar_brands",
      "permissions": [
        {
          "role": "anonymous",
          "actions": ["read"]
        }
      ]
    }
  }
}
